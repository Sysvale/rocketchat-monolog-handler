{
    "name": "sysvale/rocketchat-monolog-handler",
    "description": "A Rocket.chat Monolog Handler meant to be used in Laravel projects developed by Sysvale Softgroup",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sysvale Tecnologia",
            "email": "operations@sysvale.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2 || ^8.3",
        "monolog/monolog": "^1.12 || ^2.3 || ^3.0",
        "guzzlehttp/guzzle": "^6.0 || ^7.5 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "Sysvale\\Logging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
